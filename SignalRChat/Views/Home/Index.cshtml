@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <section id="joinGroupSection" class="row">
        <div class="col-6">
            <form id="joinGroupForm">
                <div class="form-group">
                    <label class="d-block">Username</label>
                    <input id="username" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="d-block">Group</label>
                    <select id="group" class="form-select">
                        <option value="1">Group 1</option>
                        <option value="2">Group 2</option>
                        <option value="3">Group 3</option>
                    </select>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-success" type="submit">Join</button>
                </div>
            </form>
        </div>
    </section>
    <section id="chatSection" class="row mt-5 d-none">
        <div class="col-12">
            <button id="leaveGroupBtn" class="btn btn-danger mt-3">Leave</button>
        </div>
        <div class="col-4">
            <form id="sendMessageForm">
                <div class="form-group mt-3">
                    <label>Message</label>
                    <textarea class="d-block" id="message"></textarea>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-success">Send</button>
                </div>
            </form>
        </div>
        <div class="col-8">
            <ul id="messages" class="list-group">
                @* <li class="list-group-item">
                <b>Emil</b>
                <p>Salam</p>
                </li>*@
            </ul>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}